<!-- res/drawable/semicircle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rectangle background (full width, half height) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- White background color -->
        </shape>
    </item>

    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="600dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lavendar" /> <!-- Fill color -->
        </shape>
    </item>

    <!-- Oval shape (full width, full height) -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="500dp">
        <shape android:shape="oval">
            <solid android:color="@color/lavendar" /> <!-- Fill color -->
        </shape>
    </item>
</layer-list>
